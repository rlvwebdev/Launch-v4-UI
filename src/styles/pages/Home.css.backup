/* ============================================
   HOME PAGE STYLES
   Landing dashboard selector
   ============================================ */

.home {
  padding: 2rem;
  max-width: 1400px;
  margin: 0 auto;
}

/* --------------------------------------------
   HERO SECTION
   -------------------------------------------- */
.home__hero {
  text-align: center;
  margin-bottom: 3rem;
}

.home__title {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--navbar-text-dark);
  margin: 0 0 0.5rem 0;
  font-family: 'Oxanium', sans-serif;
}

.home__subtitle {
  font-size: 1.125rem;
  color: var(--navbar-text);
  margin: 0;
}

/* --------------------------------------------
   DASHBOARD GRID
   -------------------------------------------- */
.home__dashboards {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 1.5rem;
}

.home__dashboard-card {
  display: flex;
  flex-direction: column;
  padding: 2rem;
  background: var(--navbar-input-bg);
  border: 2px solid var(--navbar-border);
  border-radius: 12px;
  text-decoration: none;
  transition: all 200ms ease;
  position: relative;
  overflow: hidden;
}

.home__dashboard-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--card-color, var(--navbar-primary));
  opacity: 0;
  transition: opacity 200ms ease;
}

.home__dashboard-card:hover {
  border-color: var(--card-color, var(--navbar-primary));
  transform: translateY(-4px);
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
}

.home__dashboard-card:hover::before {
  opacity: 1;
}

[data-theme="dark"] .home__dashboard-card {
  background: #1e293b;
}

[data-theme="dark"] .home__dashboard-card:hover {
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
}

.home__dashboard-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.home__dashboard-name {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--navbar-text-dark);
  margin: 0 0 0.5rem 0;
}

.home__dashboard-description {
  font-size: 0.9375rem;
  color: var(--navbar-text);
  margin: 0;
  line-height: 1.5;
}

/* --------------------------------------------
   RESPONSIVE
   -------------------------------------------- */
@media (max-width: 768px) {
  .home {
    padding: 1.5rem;
  }

  .home__title {
    font-size: 2rem;
  }

  .home__dashboards {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 480px) {
  .home {
    padding: 1rem;
  }

  .home__title {
    font-size: 1.75rem;
  }

  .home__dashboard-card {
    padding: 1.5rem;
  }
}
