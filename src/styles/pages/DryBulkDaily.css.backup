/* Dry Bulk Daily Dashboard */
.page-container {


  padding: 2rem;


  max-width: 100%;
}/* Theme support - aligned with dashboard colors */
:root {


  --border-color: #334155;


  --border-hover: #475569;


  --border-section: rgba(51, 65, 85, 0.6);


  --bg-overlay: rgba(255, 255, 255, 0.03);


  --bg-overlay-hover: rgba(255, 255, 255, 0.05);


  --text-primary: #f1f5f9;


  --text-secondary: #cbd5e0;


  --text-muted: #94a3b8;


  --text-subtle: #64748b;


  --color-success: #10b981;


  --color-success-bg: rgba(16, 185, 129, 0.1);


  --color-warning: #f59e0b;


  --color-warning-bg: rgba(245, 158, 11, 0.1);


  --color-info: #3b82f6;


  --color-info-bg: rgba(59, 130, 246, 0.1);


  --data-green: #4ade80;


  --data-orange: #fb923c;


  --data-red: #ef4444;


  --color-primary: #ff6b35;


  --color-primary-hover: #e85d2a;


  --col-alt-bg: rgba(255, 255, 255, 0.02);
}[data-theme="light"] {


  --border-color: #e2e8f0;


  --border-hover: #cbd5e0;


  --border-section: rgba(226, 232, 240, 0.8);


  --bg-overlay: rgba(0, 0, 0, 0.02);


  --bg-overlay-hover: rgba(0, 0, 0, 0.04);


  --text-primary: #0f172a;


  --text-secondary: #475569;


  --text-muted: #64748b;


  --text-subtle: #94a3b8;


  --color-success: #10b981;


  --color-success-bg: rgba(16, 185, 129, 0.1);


  --color-warning: #f59e0b;


  --color-warning-bg: rgba(245, 158, 11, 0.1);


  --color-info: #3b82f6;


  --color-info-bg: rgba(59, 130, 246, 0.1);


  --data-green: #059669;


  --data-orange: #ea580c;


  --data-red: #dc2626;


  --col-alt-bg: rgba(0, 0, 0, 0.02);


  --color-primary: #ff6b35;


  --color-primary-hover: #e85d2a;
}[data-theme="light"] .detail-row--load {


  background: var(--color-info-bg) !important;
}[data-theme="light"] .detail-row--truck {


  background: var(--color-warning-bg) !important;
}[data-theme="light"] .detail-row--trailer {


  background: rgba(156, 39, 176, 0.08) !important;
}/* Dashboard Filters */
.dashboard-filters {


  display: flex;


  flex-direction: column;


  gap: 0.75rem;


  margin-bottom: 1.5rem;
}/* Day Toggle */
.day-toggle {


  display: flex;


  gap: 0.25rem;


  padding: 0.25rem;


  border-radius: 0;


  width: fit-content;


  background: var(--bg-overlay-hover);
}.day-toggle__btn {


  padding: 0.5rem 1.5rem;


  border: none;


  border-radius: 0;


  font-family: 'Rajdhani', sans-serif;


  font-size: 0.9375rem;


  font-weight: 600;


  color: var(--text-muted);


  text-transform: uppercase;


  letter-spacing: 0.03em;


  background: transparent;


  transition: all 0.2s ease;


  cursor: pointer;
}.day-toggle__btn--active {


  color: #ffffff;


  background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);


  box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3);
}.day-toggle__btn:not(.day-toggle__btn--active):hover {


  color: var(--text-secondary);


  background: var(--bg-overlay-hover);
}/* Region Selector */
.region-selector {


  padding: 0.5rem 1.5rem;


  border: none;


  border-radius: 0;


  margin-right: 0.25rem;


  outline: none;


  min-width: 200px;


  padding-right: 2.5rem;


  font-family: 'Rajdhani', sans-serif;


  font-size: 0.9375rem;


  font-weight: 600;


  color: var(--text-muted);


  text-transform: uppercase;


  letter-spacing: 0.03em;


  background: var(--bg-overlay-hover);


  background-image: url('data:image/svg+xml;


  background-repeat: no-repeat;


  background-position: right 0.75rem center;


  transition: all 0.2s ease;


  cursor: pointer;


  appearance: none;


  http: //www.w3.org/2000/svg"><path d="M1 1L6 6L11 1" stroke="%2394a3b8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>');
}.region-selector:hover {


  color: var(--text-secondary);


  background: var(--bg-overlay-hover);
}.region-selector:focus {


  outline: 2px solid var(--color-primary);


  outline-offset: -2px;
}.region-selector option {


  padding: 0.5rem;


  color: var(--text-primary);


  background: var(--color-bg-primary);
}/* View Filters */
.view-filters {


  display: flex;


  gap: 0.5rem;


  flex-wrap: wrap;
}.filter-btn {


  padding: 0.5rem 1rem;


  border: 1px solid var(--border-color);


  border-radius: 0;


  font-family: 'Rajdhani', sans-serif;


  font-size: 0.875rem;


  font-weight: 600;


  color: var(--text-muted);


  text-transform: uppercase;


  letter-spacing: 0.02em;


  white-space: nowrap;


  background: var(--bg-overlay);


  transition: all 0.2s ease;


  cursor: pointer;
}.filter-btn:hover {


  border-color: var(--color-primary);


  color: var(--text-primary);


  background: var(--bg-overlay-hover);
}.filter-btn--active {


  border-color: var(--color-primary);


  color: var(--color-primary);


  background: var(--bg-overlay-hover);


  box-shadow: 0 2px 8px rgba(255, 107, 53, 0.2);
}.filter-btn--loads.filter-btn--active {


  border-color: var(--color-info);


  color: var(--color-info);


  box-shadow: 0 2px 8px rgba(59, 130, 246, 0.2);
}.filter-btn--trucks.filter-btn--active {


  border-color: var(--color-warning);


  color: var(--color-warning);


  box-shadow: 0 2px 8px rgba(245, 158, 11, 0.2);
}.filter-btn--trailers.filter-btn--active {


  border-color: #9c27b0;


  color: #9c27b0;


  box-shadow: 0 2px 8px rgba(156, 39, 176, 0.2);
}/* Division Totals */
.division-totals {


  margin-bottom: 2rem;


  border-bottom: 2px solid var(--border-color);


  padding-bottom: 1.5rem;
}.division-title {


  margin: 0 0 0.75rem 0;


  font-family: 'Rajdhani', sans-serif;


  font-size: 1.25rem;


  font-weight: 700;


  color: #ff6b35;


  text-transform: uppercase;


  letter-spacing: 0.03em;
}/* Region Container */
.region-container {


  margin-bottom: 1.5rem;
}/* Terminal Table */
.terminal-table-wrapper {


  border: 1px solid var(--border-color);


  border-radius: 0;


  padding: 0;


  background: var(--bg-overlay);


  overflow-x: auto;
}/* Scrollbar Styling */
.terminal-table-wrapper::-webkit-scrollbar {


  height: 8px;


  width: 8px;
}.terminal-table-wrapper::-webkit-scrollbar-track {


  background: transparent;
}.terminal-table-wrapper::-webkit-scrollbar-thumb {


  border-radius: 4px;


  background: #334155;
}.terminal-table-wrapper::-webkit-scrollbar-thumb:hover {


  background: #475569;
}.terminal-table {


  width: 100%;


  font-size: 0.9375rem;


  border-collapse: collapse;
}.terminal-table thead {


  color: #f1f5f9;


  background: #1e293b;
}.terminal-table th {


  padding: 0.5rem 0.5rem;


  border-bottom: 1px solid #334155;


  text-align: center;


  color: #f1f5f9;


  font-family: 'Rajdhani', sans-serif;


  font-size: 1rem;


  font-weight: 600;


  text-transform: uppercase;


  letter-spacing: 0.02em;


  white-space: nowrap;


  cursor: help;
}.terminal-table th.section-end {


  border-right: 2px solid var(--border-color);
}.terminal-table th .icon {


  display: inline-block;


  width: 0.875rem;


  height: 0.875rem;


  margin-right: 0.25rem;


  vertical-align: middle;
}.terminal-table th .th-label {


  font-size: 0.8125rem;


  font-weight: 700;


  letter-spacing: 0.05em;
}.terminal-table tbody tr {


  border-bottom: 1px solid var(--border-color);


  transition: background 0.2s ease;
}.terminal-table tbody tr:hover {


  background: var(--bg-overlay);
}.terminal-table td {


  padding: 0.5rem 0.625rem;


  color: var(--text-secondary);


  white-space: nowrap;


  font-size: 0.875rem;


  text-align: center;
}/* Alternating column group backgrounds */
.terminal-table td:nth-child(2),
.terminal-table td:nth-child(3),
.terminal-table td:nth-child(4),
.terminal-table td:nth-child(5) {


  background: var(--col-alt-bg);
}.terminal-table td:nth-child(11),
.terminal-table td:nth-child(12) {


  background: var(--col-alt-bg);
}.terminal-table th:nth-child(2),
.terminal-table th:nth-child(3),
.terminal-table th:nth-child(4),
.terminal-table th:nth-child(5) {


  background: rgba(30, 41, 59, 0.8);
}.terminal-table th:nth-child(11),
.terminal-table th:nth-child(12) {


  background: rgba(30, 41, 59, 0.8);
}.terminal-table td.section-end {


  border-right: 3px solid var(--border-section);
}.terminal-table th.section-end {


  border-right: 3px solid var(--border-section);
}.terminal-table .terminal-name {


  width: 180px;


  min-width: 180px;


  max-width: 180px;


  font-weight: 600;


  color: var(--text-primary);


  font-family: 'Rajdhani', sans-serif;


  font-size: 0.9375rem;


  text-align: left;
}.terminal-row {


  cursor: pointer;
}.terminal-row:hover {


  background: var(--bg-overlay-hover) !important;
}.expand-icon {


  display: inline-block;


  margin-right: 0.5rem;


  font-size: 0.75rem;


  color: var(--text-muted);


  transition: transform 0.2s ease;
}/* Detail Rows */
.detail-row {


  border-left: 3px solid transparent;


  cursor: pointer;
}.detail-row:hover {


  background: var(--bg-overlay-hover) !important;
}.detail-row--load {


  background: var(--color-info-bg) !important;


  border-left-color: var(--color-info);
}.detail-row--truck {


  background: var(--color-warning-bg) !important;


  cursor: default;


  border-left-color: var(--color-warning);
}.detail-row--trailer {


  background: rgba(156, 39, 176, 0.1) !important;


  cursor: default;


  border-left-color: #9c27b0;
}.detail-label {


  display: flex;


  align-items: center;


  gap: 0.5rem;


  padding: 0.75rem 1rem 0.75rem 2rem !important;


  font-size: 0.8125rem;


  font-family: 'Rajdhani', sans-serif;


  font-weight: 500;


  color: var(--text-secondary);
}.detail-icon {


  width: 1rem;


  height: 1rem;


  opacity: 0.7;
}/* Load Detail */
.load-detail {


  padding: 0.75rem 1rem !important;
}.load-detail__content {


  display: flex;


  align-items: center;


  gap: 0.75rem;


  flex-wrap: wrap;


  font-size: 0.8125rem;


  font-family: 'Rajdhani', sans-serif;
}.load-detail__expand-icon {


  margin-right: 0.25rem;


  font-size: 0.625rem;


  color: var(--text-muted);
}.load-detail__section {


  display: inline-flex;


  align-items: center;


  gap: 0.375rem;
}.load-detail__section strong {


  font-weight: 600;


  color: var(--text-muted);


  font-size: 0.75rem;
}.load-detail__divider {


  color: var(--border-color);


  font-weight: 300;
}.load-detail__shipper {


  color: var(--color-info);


  font-weight: 600;
}.shipper-icon {


  width: 0.875rem;


  height: 0.875rem;


  stroke: var(--color-info);
}.load-detail__route {


  display: inline-flex;


  align-items: center;


  gap: 0.5rem;


  color: var(--text-primary);
}.arrow-icon {


  width: 1rem;


  height: 1rem;


  stroke: var(--text-muted);
}.time-badge {


  font-size: 0.75rem;


  color: var(--text-muted);


  font-weight: 500;
}.load-detail__product {


  padding: 0.25rem 0.625rem;


  border-radius: 0;


  border: 1px solid var(--border-color);


  font-weight: 600;


  font-size: 0.75rem;


  color: var(--text-primary);


  background: var(--bg-overlay-hover);
}.load-detail__actions {


  display: flex;


  gap: 0.5rem;


  margin-left: auto;
}.copy-btn {


  display: inline-flex;


  align-items: center;


  border: none;


  padding: 0.25rem;


  color: var(--text-muted);


  background: transparent;


  transition: color 0.2s ease;


  cursor: pointer;
}.copy-btn:hover {


  color: var(--color-info);
}.copy-btn svg {


  width: 0.875rem;


  height: 0.875rem;
}.action-btn {


  padding: 0.375rem 0.75rem;


  border: 1px solid var(--border-color);


  border-radius: 0;


  font-family: 'Rajdhani', sans-serif;


  font-size: 0.75rem;


  font-weight: 600;


  text-transform: uppercase;


  letter-spacing: 0.02em;


  transition: all 0.2s ease;


  cursor: pointer;
}.action-btn--recover {


  border-color: var(--color-warning);


  color: var(--color-warning);


  background: transparent;
}.action-btn--recover:hover {


  color: #ffffff;


  background: var(--color-warning);
}.action-btn--update {


  border-color: var(--color-info);


  color: var(--color-info);


  background: transparent;
}.action-btn--update:hover {


  color: #ffffff;


  background: var(--color-info);
}/* Dispatch Plan */
.dispatch-plan-row {


  border-left: 3px solid var(--color-info);


  background: rgba(59, 130, 246, 0.03) !important;
}.dispatch-plan {


  display: flex;


  gap: 2rem;


  padding: 0.75rem 2rem 0.75rem 3rem;


  font-size: 0.8125rem;


  font-family: 'Rajdhani', sans-serif;
}.dispatch-plan__item {


  display: flex;


  align-items: center;


  gap: 0.5rem;


  color: var(--text-secondary);
}.dispatch-plan__item strong {


  color: var(--text-primary);


  font-weight: 600;
}.dispatch-icon {


  flex-shrink: 0;


  width: 1rem;


  height: 1rem;


  stroke: var(--color-info);
}.terminal-table .text-success {


  color: var(--color-success);


  font-weight: 600;
}.terminal-table .text-warning {


  color: var(--color-warning);


  font-weight: 600;
}.terminal-table .text-info {


  color: var(--color-info);


  font-weight: 600;
}/* Totals Row */
.terminal-table .totals-row {


  border-top: 2px solid var(--border-color);


  border-bottom: 2px solid var(--border-color);


  font-weight: 600;


  background: var(--bg-overlay-hover);
}.terminal-table .totals-row td {


  font-weight: 600;
}.terminal-table .totals-row:hover {


  background: var(--bg-overlay-hover);
}/* Aside Sections */
.aside-section {


  border: 1px solid var(--border-color);


  border-radius: 0;


  padding: 0.875rem;


  margin-bottom: 0.875rem;


  background: var(--bg-overlay);
}.aside-section__title {


  margin: 0 0 0.75rem 0;


  font-family: 'Rajdhani', sans-serif;


  font-size: 0.9375rem;


  font-weight: 600;


  color: #ff6b35;


  text-transform: uppercase;


  letter-spacing: 0.03em;
}.aside-stats {


  display: flex;


  flex-direction: column;


  gap: 0.75rem;
}.aside-stat {


  display: flex;


  flex-direction: column;


  gap: 0.125rem;
}.aside-stat__label {


  font-family: 'Rajdhani', sans-serif;


  font-size: 0.75rem;


  font-weight: 500;


  color: var(--text-muted);


  text-transform: uppercase;


  letter-spacing: 0.03em;
}.aside-stat__value {


  font-family: 'Oxanium', sans-serif;


  font-size: 1.25rem;


  font-weight: 600;


  color: var(--text-primary);


  line-height: 1.2;
}.aside-stat__sublabel {


  margin-top: 0.125rem;


  font-size: 0.6875rem;


  color: var(--text-subtle);
}

/* Responsive Design */
@media (max-width: 1400px) {
  .terminal-table {
    font-size: 0.8125rem;
  }.terminal-table th,
  .terminal-table td {


    padding: 0.375rem 0.5rem;
}
}

@media (max-width: 1200px) {
  .page-container {
    padding: 1.5rem;
  }.aside-stats {


    flex-direction: row;


    flex-wrap: wrap;
}.aside-stat {


    flex: 1;


    min-width: 150px;
}
}

@media (max-width: 768px) {
  .page-container {
    padding: 1rem;
  }.day-toggle {


    width: 100%;
}.day-toggle__btn {


    flex: 1;


    padding: 0.75rem 1rem;


    font-size: 1rem;
}.terminal-table-wrapper {


    padding: 0.5rem;
}.terminal-table {


    font-size: 0.8125rem;
}.terminal-table th,
  .terminal-table td {


    padding: 0.5rem 0.375rem;


    font-size: 0.75rem;
}.aside-section {


    padding: 0.75rem;
}.aside-stat__value {


    font-size: 1.125rem;
}
}
